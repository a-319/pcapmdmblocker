<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="בדיקת עדכונים לאפליקציות מותקנות"
        android:key="update_check_category">

        <Preference
            android:key="select_system_apps"
            android:title="בחר אפליקציות מערכת לעדכון"
            android:summary="לחץ כדי לבחור אפליקציות מערכת (מותקנות מראש) שיופיעו ברשימה." />

        <Preference
            android:key="select_user_apps"
            android:title="בחר אפליקציות משתמש לעדכון"
            android:summary="לחץ כדי לבחור אפליקציות שהורדו (User Apps) שיופיעו ברשימה." />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="ניהול מקורות ורשימות"
        android:key="source_list_category">
        <Preference
            android:key="source_priority_list"
            android:title="סדר קדימות לבדיקת עדכונים"
            android:summary="ערוך סדר קדימות של אתרים לבדיקת עדכונים לאפליקציות" />
        <Preference
            android:key="view_priority_list"
            android:title="הצגת סדר קדימות לבדיקת עדכונים"
            android:summary="הצגת סדר קדימות של אתרים לבדיקת עדכונים לאפליקציות" />
