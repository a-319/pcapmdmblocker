            android:dialogTitle="ערוך רשימה מאוחדת" /-->

    </PreferenceCategory>

    <PreferenceCategory
        android:title="הגדרות ייבוא וייצוא"
        android:key="import_export_category">
        
        <Preference
            android:key="clear_all_items"
            android:title="איפוס רשימת הפריטים"
            android:summary="מחק את כל הפריטים השמורים במאגר המקומי." />
            
    </PreferenceCategory>
    <PreferenceCategory
        android:title="הגדרות נוספות"
        android:key="settings_category">

        <SwitchPreference
            android:key="visible_all"
            android:title="הצג הכל"
            android:summary="הצגת כל הפריטים גם אם אין להם עדכון." />
